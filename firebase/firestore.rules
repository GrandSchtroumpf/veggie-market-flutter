rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {

      match /sellers/{sellerId} {
        allow read: if true;
        allow write: if request.auth != null;

        match /products/{productId} {
          allow read: if true;
          allow write: if request.auth != null;
        }

        match /orders/{orderId} {
          allow read: if true;
          allow write: if true;
        }
      }
    }
  }
}